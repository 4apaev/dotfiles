{
  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "breadcrumbs.enabled"      : true,
  "breadcrumbs.showBooleans" : false,

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "files.autoSave"               : "afterDelay",
  "files.enableTrash"            : true,
  "files.trimTrailingWhitespace" : true,

  "terminal.external.osxExec"              : "iTerm.app",
  "terminal.integrated.defaultProfile.osx" : "zsh",

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "window.title"          : "${dirty} ${folderName} ${separator} ${activeEditorShort}",
  "window.closeWhenEmpty" : true,
  "window.commandCenter"  : true,
  "window.nativeTabs"     : true,
  "window.titleBarStyle"  : "native",

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "explorer.confirmDelete"        : true,
  "explorer.compactFolders"       : false,
  "explorer.fileNesting.expand"   : false,
  "explorer.fileNesting.enabled"  : true,
  "explorer.fileNesting.patterns" : {
    ".mocharc.yml"      : ".c8rc",
    ".gitignore"        : ".git$(capture)*",
    ".eslintrc.yml"     : ".editorconfig",
    "docker-compose.yml": "dockerfile*, docker-compose.*, .dockerignore",
    "package.json"      : "package-lock.json, tsconfig.json, jsconfig.json, readme.md",
    "*.code-workspace"  : "tasks.json, launch.json, extensions.json",
  },

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  // "editor.inlineSuggest.enabled"            : true,

  "editor.cursorStyle"                      : "line",
  "editor.multiCursorModifier"              : "ctrlCmd",

  "editor.tabSize"                          : 2,
  "editor.lineHeight"                       : 14,
  "editor.fontSize"                         : 12,
  "editor.inlayHints.fontSize"              : 11,

  "editor.fontLigatures"                    : true,
  "editor.inlayHints.fontFamily"            : "IBM Plex Mono ExtraLight",
  "editor.codeLensFontFamily"               : "IBM Plex Mono Light",
  "editor.fontFamily"                       : "IBM Plex Mono",


  "editor.find.globalFindClipboard"         : true,

  "editor.formatOnPaste"                    : true,
  "editor.formatOnSave"                     : true,

  "editor.unfoldOnClickAfterEndOfLine"      : true,
  "editor.foldingHighlight"                 : false,
  "editor.renderLineHighlight"              : "gutter",

  "editor.guides.bracketPairs"              : true,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.matchBrackets"                    : "near",


  "editor.renderWhitespace"                 : "all",
  "editor.suggestSelection"                 : "first",
  "editor.wordSeparators"                   : "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "scm.inputFontFamily"                     : "IBM Plex Mono ExtraLight",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint"     : true,
    "source.organizeImports"   : false,
    "source.addMissingImports" : true,
  },



  //////////////////////////////////////////////////////////////////////////////////////////////////////

  // "editor.unicodeHighlight.allowedCharacters"   : { "❯": true, "❮": true, },
  // "editor.unicodeHighlight.allowedLocales"      : { "_os": true, "_vscode": true },
  // "editor.unicodeHighlight.includeComments"     : false,
  // "editor.unicodeHighlight.includeStrings"      : false,
  // "editor.unicodeHighlight.ambiguousCharacters" : false,
  // "editor.unicodeHighlight.invisibleCharacters" : false,
  // "editor.unicodeHighlight.nonBasicASCII"       : false,
  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.fontAliasing"                 : "antialiased",
  "workbench.startupEditor"                : "none",
  "workbench.editor.pinnedTabSizing"       : "shrink",
  "workbench.editor.closeOnFileDelete"     : true,
  "workbench.editor.highlightModifiedTabs" : true,

  "workbench.localHistory.maxFileEntries"  : 75,
  "workbench.localHistory.maxFileSize"     : 512,
  "workbench.localHistory.mergeWindow"     : 20,

  "workbench.tree.indent"                  : 16,
  "workbench.view.alwaysShowHeaderActions": true,

  "workbench.colorTheme"                   : "Oceanic Next (Sublime)",
  "workbench.colorCustomizations": {
    "gitDecoration.untrackedResourceForeground" : "#99c7947c",
    "gitDecoration.addedResourceForeground"     : "#99C794",
    "gitDecoration.modifiedResourceForeground"  : "#6BD8FF",
    "gitDecoration.deletedResourceForeground"   : "#E55555",
    "gitDecoration.ignoredResourceForeground"   : "#65737ea4",
    "editor.background"                         : "#303841",
    "editor.foreground"                         : "#d5dbe6",
    "editorCursor.foreground"                   : "#40c463",
    "editor.selectionBackground"                : "#40ad5d31",
    "editorBracketMatch.border"                 : "#30384100",
    "editorBracketMatch.background"             : "#1f1d21",
    "sideBar.background"                        : "#1d2227",
    "sideBar.border"                            : "#303841",
    "panel.background"                          : "#1d2227",
    "activityBar.background"                    : "#1d2227",
    "activityBar.border"                        : "#303841",
    "statusBar.background"                      : "#282b3c",
    "statusBar.foreground"                      : "#eeffff",
    "titleBar.activeBackground"                 : "#282b3c",
    "titleBar.activeForeground"                 : "#eeefff"
  },

  //////////////////////////////////////////////////////////////////////////////////////////////////////
  "search.maxResults"           : 20,
  "search.showLineNumbers"      : true,
  "search.useGlobalIgnoreFiles" : true,
  "search.collapseResults"      : "alwaysExpand",
  "search.exclude": {
    "dist"         : true,
    "build"        : true,
    "coverage"     : true,
    "node_modules" : true,
    ".c8_temp"     : true,
    ".c8temp"      : true,
    ".idea"        : true,
  },

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  // "aws.telemetry": false,
  // "aws.samcli.enableCodeLenses": true,
  // "aws.suppressPrompts": { "fileViewerEdit": true },
  // "aws.ecs.openTerminalCommand": "/bin/zsh",

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "git.autofetch": true,
  "git.mergeEditor": true,
  "git.countBadge": "tracked",
  "github.gitProtocol": "ssh",
  "git.untrackedChanges": "hidden",

  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "merge-conflict.decorators.enabled": true,

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "scm.diffDecorationsGutterWidth": 4,
  "scm.diffDecorationsGutterVisibility": "always",
  "scm.diffDecorationsGutterPattern": {
    "added": true,
    "modified": true,
  },

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "path-intellisense.extensionOnImport": true,
  "vsintellicode.sql.completionsEnabled": true,
  "vsintellicode.features.python.deepLearning": "enabled",

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "eslint.run": "onSave",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.alwaysShowStatus": true,
  "problems.showCurrentInStatus": true,

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "docker.enableDockerComposeLanguageService": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",


  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "html.format.indentInnerHtml": true,
  "html.format.maxPreserveNewLines": 1,

  "css.format.spaceAroundSelectorSeparator": true,
  "scss.format.spaceAroundSelectorSeparator": true,

  "yaml.format.enable": false,
  "yaml.format.singleQuote": true,
  "yaml.format.bracketSpacing": true,
  "yaml.completion": true,
  "yaml.hover": true,

  "js/ts.implicitProjectConfig.target": "ES2022",
  "js/ts.implicitProjectConfig.module": "ES2022",

  "js/ts.implicitProjectConfig.strictFunctionTypes": false,
  "js/ts.implicitProjectConfig.experimentalDecorators": true,

  "javascript.preferences.quoteStyle": "single",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "javascript.referencesCodeLens.enabled": false,

  "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "javascript.format.semicolons": "remove",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,


  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.referencesCodeLens.enabled": false,

  "typescript.format.semicolons": "remove",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.updateImportsOnFileMove.enabled": "always",


  "[css]"        : { "editor.defaultFormatter": "vscode.css-language-features"        , "editor.formatOnSave": false },
  "[json]"       : { "editor.defaultFormatter": "vscode.json-language-features"       , "editor.formatOnSave": false },
  "[python]"     : { "editor.defaultFormatter": "vscode.ipynb"                        , "editor.formatOnSave": false },
  "[typescript]" : { "editor.defaultFormatter": "vscode.typescript-language-features" , "editor.formatOnSave": false },
  "[html]"       : { "editor.defaultFormatter": "vscode.html-language-features"       , "editor.formatOnSave": false },
  "[yaml]"       : { "editor.defaultFormatter": "redhat.vscode-yaml"                  , "editor.formatOnSave": false },
  "[go]"         : { "editor.defaultFormatter": "golang.go"                           , "editor.formatOnSave": false },

  //////////////////////////////////////////////////////////////////////////////////////////////////////

  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "editor.minimap.enabled": false,
}



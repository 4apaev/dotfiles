  "terminal.lineSpacing": 1.4,
  "terminal.fontSize": 12.0,
  "terminal.clearTerminalOnCmdK": true,
  "terminal.enableFocusEditorOnEsc": true,
  "launchTerminalOnOpen": true,

  "fus.sendAllowed": false, // usage stats
  "editor.showTabs": true,
  "editor.softWrapEnabled": true
